generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user model
model User {
  id           String  @id @default(uuid())
  email        String  @unique
  name         String?
  passwordHash String
  salt         String
  posts        Post[]
}

// post model
model Post {
  id        String  @id @default(uuid())
  title     String
  content   String
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  String
}
